# Render Environment Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1

# CORS - Render frontend URL
CORS_ORIGIN=https://tradingpool-frontend.onrender.com
ALLOWED_ORIGINS=https://tradingpool-frontend.onrender.com

# Database - SQLite for now (can be upgraded to PostgreSQL)
DATABASE_TYPE=sqlite
DATABASE_NAME=./data/tradingpool.db
DATABASE_SYNC=false

# JWT Secrets - MUST be set in Render dashboard
# These are placeholders - set real values in Render environment variables
JWT_ACCESS_SECRET=${JWT_ACCESS_SECRET:-dev_access_secret_32_chars_minimum}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET:-dev_refresh_secret_32_chars_minimum}
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Encryption - MUST be set in Render dashboard
MASTER_ENCRYPTION_KEY=${MASTER_ENCRYPTION_KEY:-dev_encryption_key_32_chars_minimum}

# Admin User
ADMIN_EMAIL=sesshomaru@admin.com
ADMIN_PASSWORD=inyasha
ADMIN_USERNAME=sesshomaru

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Trading Module
TRADING_MODULE_URL=http://localhost:4000
TRADING_API_KEY=${TRADING_API_KEY:-dev_trading_api_key_32_chars_minimum}

# Frontend URL (for WebSocket)
FRONTEND_URL=https://tradingpool-frontend.onrender.com

# Logging
LOG_LEVEL=warn
